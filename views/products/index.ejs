<% layout('layout/boilerplate') -%>
<h1>
    <%= category %> Products
</h1>
<div class="row">
    <div class="card-group">
        <% for (let product of products){ %>

        <div class=" p-2 col-lg-6 col-xl-3 col-xs-12 col-md-6 ">
            <div class="card p-2" style="width: 16rem;">
                <img src="<%= product.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-title"><a href="/products/<%= product._id %>">
                            <%= product.name.toUpperCase() %>
                        </a></p>
                    <p class="card-text"> Description: <br> <%= product.description.slice(0, 25) %> <a
                            href="/products/<%= product._id %> ">...read
                            more</a>
                    </p>
                    <p class="card-text"> Store: <a href="/stores/<%= product.store._id %>">
                            <%= product.store.username %>
                        </a>
                    </p>

                </div>

            </div>
        </div>
        <% } %>
    </div>
</div>

<% if(category !=='All' ){ %>
<a href=" /products">All Products</a>
<% } %>
<a href="/stores">All Stores</a>

<script src="" async defer></script>